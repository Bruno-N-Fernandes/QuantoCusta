<PageTitle>Profissão</PageTitle>

<MudDataGrid T="Profissao" MultiSelection="true" Items="@Profissoes" QuickFilter="@_quickFilter" SortMode="SortMode.Multiple" Filterable="true" Hideable="true" Hover="true" Dense="true" Striped="true" Bordered="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Profissões</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="_searchString" Placeholder="Search" Adornment="Adornment.Start" Immediate="true" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="x => x.CBO" Title="CBO" />
		<PropertyColumn Property="x => x.Descricao" Title="Descrição" />
		<PropertyColumn Property="x => x.PisoSalarial" Title="Piso Salarial" />
		<PropertyColumn Property="x => x.TetoSalarial" Title="Teto Salarial" />
        <PropertyColumn Property="x => x.PercentualAdicionalNoturno" Title="Percentual Adicional Noturno" />
        <PropertyColumn Property="x => x.PercentualAdicionalPericulosidade" Title="Percentual Adicional Periculosidade" />
        <PropertyColumn Property="x => x.PercentualAdicionalInsalubridade" Title="Percentual Adicional Insalubridade" />
        <PropertyColumn Property="x => x.QuantidadeDiasExpediente" Title="Quantidade de Dias de Expediente" />
    </Columns>
    <PagerContent>
        <MudDataGridPager T="Profissao" />
    </PagerContent>
</MudDataGrid>