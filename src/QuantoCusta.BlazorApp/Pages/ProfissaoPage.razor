<PageTitle>Profissão</PageTitle>

<MudDataGrid T="Profissao" MultiSelection="true" Items="@Profissoes" QuickFilter="@_quickFilter" SortMode="SortMode.Multiple" Filterable="true" Hideable="true" Hover="true" Dense="true" Striped="true" Bordered="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Profissões</MudText>
        <MudSpacer />
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="e=>OpenPopup()">Incluir</MudButton>
        <MudSpacer />
        <MudTextField @bind-Value="_searchString" Placeholder="Search" Adornment="Adornment.Start" Immediate="true" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <Columns>
        <PropertyColumn Property="x => x.CBO" Title="CBO" />
		<PropertyColumn Property="x => x.Descricao" Title="Descrição" />
		<PropertyColumn Property="x => x.PisoSalarial" Title="Piso Salarial" />
		<PropertyColumn Property="x => x.TetoSalarial" Title="Teto Salarial" />
        <PropertyColumn Property="x => x.QuantidadeDiasExpediente" Title="Quantidade de Dias de Expediente" />
        <PropertyColumn Property="x => x.JornadaDeTrabalhoDiaria" Title="Jornada De Trabalho Diária (Horas)" />
        <PropertyColumn Property="x => x.CargaHorariaMensal" Title="Carga Horária (Mensal)" />
        <TemplateColumn CellClass="d-flex justify-end">
            <CellTemplate>
                <MudStack Row>
                    <MudButton Size="@Size.Small" Variant="Variant.Filled" Color="Color.Primary" OnClick="e=>OpenPopup(context.Item, Mode.Mostrar)">Mostrar</MudButton>
                    <MudButton Size="@Size.Small" Variant="Variant.Filled" Color="Color.Primary" OnClick="e=>OpenPopup(context.Item, Mode.Alterar)">Alterar</MudButton>
                    <MudButton Size="@Size.Small" Variant="Variant.Filled" Color="Color.Primary" OnClick="e=>OpenPopup(context.Item, Mode.Excluir)">Excluir</MudButton>
                </MudStack>
            </CellTemplate>
        </TemplateColumn>

    </Columns>
    <PagerContent>
        <MudDataGridPager T="Profissao" />
    </PagerContent>
</MudDataGrid>